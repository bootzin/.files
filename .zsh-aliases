
#Overriding firefox
alias firefox="firefox-nightly"

# Adding color
alias diff='diff --color=auto'
alias ls='ls -hCF --color=auto --group-directories-first'
alias ccat="highlight --out-format=xterm256" #Color cat - print file with syntax highlighting.

#Generic Shortcuts
alias music="ncmpcpp"
alias clock="ncmpcpp -s clock"
alias visualizer="ncmpcpp -s visualizer"
alias news="newsboat"
alias email="neomutt"
alias files="ranger"
alias chat="weechat"
alias audio="alsamixer"
alias calender="calcurse"
alias getmail="offlineimap && notmuch new"
alias gm="offlineimap && notmuch new"
alias vlci='vlc -I ncurses'

#System Maintenance
alias progs="pacman -Qet" # List programs I've installed
alias orphans="pacman -Qdt" # List orphan programs
alias upgr="neofetch && yaourt -Syyua --noconfirm  && echo Update complete. | figlet"
alias newnet="sudo systemctl restart NetworkManager" # Refresh wifi
alias nf="clear && neofetch" # Le Redditfetch

#Random Shortcuts
alias v="vim"
alias sv="sudo vim"
alias r="ranger"
alias sr="sudo ranger"
alias mkd="mkdir -pv"
alias rf="source ~/.zshrc"
alias bw="wal -c -g -i  ~/Pictures/Wallpapers/current.png -o 'patch-st-colors' " # Rerun pywal
#TeX
alias Txa="cp ~/Documents/LaTeX/article.tex ./"
# alias Txs="cp ~/Documents/LaTeX/beamer.tex"
# alias Txh="cp ~/Documents/LaTeX/handout.tex"
alias TC='texclear'

#Dotfiles management
alias config='/usr/bin/git --git-dir=$HOME/.files --work-tree=$HOME'




